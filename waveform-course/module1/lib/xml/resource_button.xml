<data>

	<events>
		<event id="resourceBtn">
			<click>
				<screenevent id="RESOURCE_TYPE" target="parent" /> 
			</click>
			<rollover>
				<translate height="100%" animtime="0.3" ease="Power2.easeOut">descriptionBox</translate>
			</rollover>
			<rollout>
				<translate height="25%" animtime="0.3" ease="Power2.easeOut">descriptionBox</translate>			
			</rollout>
		</event>		
	</events>

		<box id="1" class="resourceBtnInner" event="resourceBtn" >
			<image class="resourceImage"><![CDATA[FILE_PATH]]></image>	
			<svg id="visitState" src="lib/images/ui/ui_resource_tick.svg"></svg>
			<box id="descriptionBox">
				<text class="descriptionText">
					<![CDATA[
						<p class="title"></p>
						<p class="description"></p>
					]]>
				</text>
			</box>
		</box>
</data>