<?xml version="1.0" encoding="utf-8" ?>
<data>
	
	<events>
			
		<event id="onEnterScrollView">	
			<media id="cat" action="play" />
			<media id="fire" action="play" />
		</event>
		
		<event id="onExitScrollView">		
			<media id="cat" action="stop" />
			<media id="fire" action="stop" />		
			<event id="closeHotspot"/>
		</event>		
	
		<event id="init">
			<event id="closeHotspot"/>
		</event>		
		
		<event id="hotspot">
			<anim type="alpha" animtime="0.2">[ITEM]_reveal</anim>
			<translate scale="1" animtime="0.2">[ITEM]_reveal</translate>
		</event>
		
		<event id="closeHotspot">
			<!-- <anim type="alphaout" animtime="0.2">[ITEM]_reveal</anim>			 -->
			<anim type="alphaout" animtime="0.2">hotspot1_reveal</anim>			
			<translate scale="0" animtime="0.2">hotspot1_reveal</translate>			
		</event>
	</events>
	
	<!-- 	
	<timeline id="animTimeline" autoplay="false" xtime="1">
		<tween element="car" time="2" delay="1"><![CDATA[ x:600, ease:Power2.easeOut  ]]></tween>
	</timeline>
	 -->
		 
<!-- 	 
	 OFFSET SETTINGS
	 offset="enterScreen" left edge enters the screen
	 offset="onScreen" left edge at left side of screen
 -->
	 
	<timeline id="scrollTimeline" control="scroll" scrollaxis="x" useparent="true" autoplay="false" offset="enterScreen" >
		<tween element="layer10" time="830" ><![CDATA[ x:100, ease:Power0.easeNone]]></tween>
	</timeline>
	
	<box id="layer10" x="0">
		<image id="room" x="-102" y="-50" ><![CDATA[lib/images/content/mdl851001_04_116_home.png]]></image>
		<svganim id="fire" src="lib/animations/mdl851001_04_116_fire.json" fps="24" width="197" height="305" x="527" y="189" loop="true" autoplay="false" disableTM="true"/>		
	</box>
	
	<box id="top">
		<svganim id="cat" src="lib/animations/mdl851001_04_116_cat_sleep.json" fps="12" width="181" height="150" x="550" y="430" loop="true" autoplay="false" disableTM="true"/>		
	</box>
	
	<box id="hotspot1" class="scrollRevealHotspot" width="30" height="30" x="400" y="240" event="hotspot"/>			

	<box id="hotspot1_reveal" class="scrollReveal" x="17" y="140" width="800" anim="hidden">
		<box class="titleBar">
			<text class="titleText">
				<![CDATA[<p>Learning anytime, anywhere</p>]]>
			</text>
			<box class="closeBtn" width="20" height="20" event="closeHotspot"/>
		</box>
		<image class="revealImage"><![CDATA[lib/images/content/mdl851001_04_116_reveal.jpg]]></image>
		<text class="content">
			<![CDATA[
				<p>"And when I do have time between calls and visits I can check on what our competitors are up to and even get feedback from my manager. Now it's time to relax and prepare for another successful day aided by technology."</p>
			]]>
		</text>
	</box>	
	
	
	<text id="titleTxt" class="scrollRevealTitle" x="320" y="50" width="250">
		<![CDATA[<p>Learning anytime, anywhere</p>]]>
	</text>			
	
</data> 