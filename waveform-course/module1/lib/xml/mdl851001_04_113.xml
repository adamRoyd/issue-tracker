<?xml version="1.0" encoding="utf-8" ?>
<data>
	
	<events>
		<event id="onEnterScrollView">			
			<media id="animTimeline" action="play" />
		</event>
		
		<event id="onExitScrollView">		
			<media id="animTimeline" action="reverse" />
			<event id="closeHotspot"/>			
		</event>
		
		<event id="init">
			<event id="closeHotspot"/>
		</event>		
		
		<event id="hotspot">
			<anim type="alpha" animtime="0.2">[ITEM]_reveal</anim>
			<translate scale="1" animtime="0.2">[ITEM]_reveal</translate>
		</event>
		
		<event id="closeHotspot">
			<!-- <anim type="alphaout" animtime="0.2">[ITEM]_reveal</anim>			 -->
			<anim type="alphaout" animtime="0.2">hotspot1_reveal</anim>			
			<translate scale="0" animtime="0.2">hotspot1_reveal</translate>			
		</event>	
		
	</events>
	
	
	
	<timeline id="animTimeline" autoplay="false" xtime="1">
		<tween element="car" time="2" delay="1"><![CDATA[ x:600, ease:Power2.easeOut  ]]></tween>
		<tween element="wheel1" time="2" delay="1"><![CDATA[ rotation: 1080  ]]></tween>
		<tween element="wheel2" time="2" delay="1"><![CDATA[ rotation: 1080  ]]></tween>
	</timeline>
	
	
	<!-- 
	width of cell = 1203
	width of cell + screen = 2217
	cell leftEdge = 1637
	leftEdge - screen = 623
	 -->
	 
	<timeline id="scrollTimeline" control="scroll" scrollaxis="x" useparent="true" autoplay="false" offset="enterScreen" >
		<tween element="clouds" time="2217" ><![CDATA[ x:2100, ease:Power0.easeNone]]></tween>
		<tween element="layer0" time="2217" ><![CDATA[ x:1203, ease:Power0.easeNone]]></tween>
		<tween element="layer10" time="2217" ><![CDATA[ x:700, ease:Power0.easeNone]]></tween>
		<!-- <tween element="layer20" time="3600" ><![CDATA[ x:-600, ease:Power0.easeNone]]></tween> -->
	</timeline>

	<box id="bg" width="100%" height="100%" bgcol="#00B1C8"/>
	
	<box id="clouds" x="-1010">
		<image id="c1" x="0" y="130" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_01.png]]></image>
		<image id="c2" x="150" y="210" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_02.png]]></image>
		<image id="c3" x="280" y="110" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_03.png]]></image>
		<image id="c4" x="517" y="-10" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_01.png]]></image>
		<image id="c5" x="780" y="80" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_02.png]]></image>
		<image id="c6" x="895" y="-10" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_03.png]]></image>
		<image id="c7" x="1045" y="130" ><![CDATA[lib/images/content/mdl851001_04_113_cloud_01.png]]></image>
	</box>
	
	<box id="layer0" x="-420">
		<image id="city" x="0" y="10" ><![CDATA[lib/images/content/mdl851001_04_113_city.png]]></image>
	</box>
	
	<box id="layer10" x="-325">
		<image id="street" x="0" y="297" ><![CDATA[lib/images/content/mdl851001_04_113_street.png]]></image>
	</box>
	
	<box id="layer20">
		<box id="car" x="70" y="400">
			<image id="body"><![CDATA[lib/images/content/mdl851001_04_113_car.png]]></image>
			<image id="wheel1" x="23" y="100" ><![CDATA[lib/images/content/mdl851001_04_113_wheel.png]]></image>
			<image id="wheel2" x="310" y="100" ><![CDATA[lib/images/content/mdl851001_04_113_wheel.png]]></image>
			<box id="hotspot1" class="scrollRevealHotspot" width="30" height="30" x="190" y="20" event="hotspot"/>	
		</box>
	</box>
	
	<box id="hotspot1_reveal" class="scrollReveal" x="370" y="40" width="800" anim="hidden">
		<box class="titleBar">
			<text class="titleText">
				<![CDATA[<p>A mobile solution for a mobile team</p>]]>
			</text>
			<box class="closeBtn" width="20" height="20" event="closeHotspot"/>
		</box>
		<image class="revealImage"><![CDATA[lib/images/content/mdl851001_04_113_reveal.jpg]]></image>
		<text class="content">
			<![CDATA[
				<p>"We spend most of our time in the field visiting stores, so having a mobile solution that will do everything from  displaying my selling story, to capturing orders to  reviewing key performance indicators (KPIs)is invaluable."</p>
			]]>
		</text>
	</box>	
	
	
	<text id="titleTxt" class="scrollRevealTitle" x="40" y="50" width="250">
		<![CDATA[<p>A mobile solution for a mobile team</p>]]>
	</text>	
	
</data> 