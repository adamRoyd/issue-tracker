<?xml version="1.0" encoding="utf-8" ?>
<data>

	<events>
		<event id="init">
			<event id="startAnimations" />
			<translate alpha="0" animtime="0" height="0%">2_topicTxt</translate>
			<translate alpha="0" animtime="0" height="0%">3_topicTxt</translate>
			<translate alpha="0" animtime="0" height="0%">4_topicTxt</translate>
			<event id="topic1_activate"/>
		</event>
		<event id="in_topic">
			<show>menu_overlay</show>
			<media id="audio1" action="stop" />
			<media id="music" action="stop" />
		</event>

		<event id="in_menu">
			<function delay="0.1" name="scrollToCurrent" />
			<hide delay="0.1">menu_overlay</hide>
		</event>
		<event id="openIntroVideo">
			<dialogue id="intro_revisit"/>
		</event>
		
		<event id="topicbutton">
			<rollover>
				<translate scale="1.1" animtime="1">[ITEM].topic_image</translate>
			</rollover>
			<rollout>
				<translate scale="1" rotation="0" animtime="0.3">[ITEM].topic_image</translate>
			</rollout>
		</event>		
		
		<event id="scrollPrompt_deactivate">
			<anim type="alphaout" animtime="0.5">scrollPrompt</anim>
		</event>
			
		<event id="1_activate">
			<media id="1_burst" action="play" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="100%">1_topicTxt</translate>
		</event>
				
		<event id="1_deactivate">
			<media id="1_burst" action="reverse" />
			<translate alpha="0" animtime="1.5" animease="Power2.easeOut" height="0%">1_topicTxt</translate>
		</event>
				
		<event id="2_activate">
			<media id="2_burst" action="play" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="100%">2_topicTxt</translate>			
		</event>
				
		<event id="2_deactivate">
			<media id="2_burst" action="reverse" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="0%">2_topicTxt</translate>			
		</event>
				
		<event id="3_activate">
			<media id="3_burst" action="play" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="100%">3_topicTxt</translate>			
		</event>
				
		<event id="3_deactivate">
			<media id="3_burst" action="reverse" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="0%">3_topicTxt</translate>			
		</event>
				
		<event id="4_activate">
			<media id="4_burst" action="play" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="100%">4_topicTxt</translate>			
		</event>
				
		<event id="4_deactivate">
			<media id="4_burst" action="reverse" />
			<translate alpha="1" animtime="1.5" animease="Power2.easeOut" height="1%">4_topicTxt</translate>			
		</event>
		
	</events>
	
	
	<timeline id="scrollTimeline" control="scroll" scrollaxis="x" inputx="layer10" autoplay="false" time="3620">
		<tween element="layer10" time="3620" ><![CDATA[ x:-300, ease:Power0.easeNone]]></tween>
		<tween element="layer20" time="3620" ><![CDATA[ x:-600, ease:Power0.easeNone]]></tween>
		<tween element="layer30" time="3620" ><![CDATA[ x:-1000, ease:Power0.easeNone]]></tween>
	</timeline>
	
	
	
	<box id="layer0" width="3620" height="644" class="overflowHidden">
		
		<box id="bgTiles" >
			<image x="0"><![CDATA[lib/images/ui/menu/mdl851002_menu_bkg_01.png]]></image>
			<image x="1000"><![CDATA[lib/images/ui/menu/mdl851002_menu_bkg_02.png]]></image>
			<image x="2000"><![CDATA[lib/images/ui/menu/mdl851002_menu_bkg_03.png]]></image>
			<image x="3000"><![CDATA[lib/images/ui/menu/mdl851002_menu_bkg_04.png]]></image>
		</box>

		<box id="layer1">

		</box>	
			
		<box id="layer10" x="100" y="0" width="1014" height="644">

			<image id="midLayer"><![CDATA[lib/images/ui/menu/mdl851002_menu_mid.png]]></image>
		
			<box id="layer11"/>
		
			<box id="topicButtons">	
						
			</box>
		</box>
		
		<box id="layer20" x="200" width="1014" height="644" class="noMouse">
			<image id="topLayer" ><![CDATA[lib/images/ui/menu/mdl851002_menu_top.png]]></image>
		</box>	
			
		<box id="layer30" class="noMouse">
			<image id="bottles" x="2300" y="500"><![CDATA[lib/images/ui/menu/mdl851002_menu_bottles.png]]></image>
		</box>	
		
	</box>		

	<button id="replayIntro" x="20" y="70" width="100" enabled="true" anim="alpha" event="openIntroVideo"><![CDATA[<p>Replay video</p>]]></button>
	
	<box class="audioIcon" x="925" y="70" width="72" height="87" target="menuscreen" event="playMenuAudio" />
	
	<custom>
		<settings scrolldirection="horizontal" scrollwidth="3620" />
		
		<text id="scrollPrompt" x="740" y="120" width="200" target="layer1" class="animationTrigger" bufferoffset="300">
			<![CDATA[
				<p>Scroll to the right to see all the areas. Select an icon to enter an area.</p>
			]]>
		</text>

		<screen id="liftAnim" x="10" y="244" width="283" height="326" xml="lib/xml/menu_anim_lift.xml" target="layer1" class="animationTrigger" bufferoffset="130"/>		
		<screen id="mapAnim" x="980" y="160" width="745" height="396" xml="lib/xml/menu_anim_map.xml" target="layer1" class="animationTrigger" bufferoffset="-100"/>
		<screen id="scienceAnim" x="1880" y="228" width="250" height="326" xml="lib/xml/menu_anim_science.xml" target="layer11" class="animationTrigger" bufferoffset="-100"/>
		<screen id="scienceAnim2" x="2240" y="167" width="283" height="326" xml="lib/xml/menu_anim_science2.xml" target="layer1" class="animationTrigger" bufferoffset="-100"/>
		<screen id="tvAnim" x="2880" y="197" width="283" height="326" xml="lib/xml/menu_anim_tv.xml" target="layer1" class="animationTrigger" bufferoffset="-100"/>
		
		<topicbutton id="1" topic="1" x="80" y="110" width="100" height="150" event="topicbutton" class="animationTrigger" bufferoffset="30" target="topicButtons">						
			<status id="1_status" y="65" topic="1" />
			<svganim id="1_burst" src="lib/animations/burst_animation.json" width="110" height="70" loop="false" autoplay="false" fps="40"/>
			<text id="1_topicTxt" class="topicButtonText" x="110" y="0" width="110" height="100%" >
				<![CDATA[
					<p class="title"><span class="wf-topic-longlabel"></span></p>
					<p class="topicTime"><span class="wf-topic-duration">5</span> MINS</p>
				]]>
			</text>
		</topicbutton>		

		<topicbutton id="2" topic="2" x="1190" y="90" width="100" height="150" event="topicbutton" class="animationTrigger" bufferoffset="100" target="topicButtons">			
			<status id="2_status" y="65"  topic="2" />
			<svganim id="2_burst" src="lib/animations/burst_animation.json" width="110" height="70" loop="false" autoplay="false" fps="40"/>			
			<text id="2_topicTxt" class="topicButtonText" x="110" y="0" width="240" height="100%" >
				<![CDATA[
					<p class="title"><span class="wf-topic-longlabel"></span></p>
					<p class="topicTime"><span class="wf-topic-duration">5</span> MINS</p>
				]]>
			</text>				
		</topicbutton>
				
		<topicbutton id="3" topic="3" x="1870" y="60" width="100" height="150" event="topicbutton" class="animationTrigger" bufferoffset="100" target="topicButtons">			
			<status id="3_status" y="65"  topic="3" />
			<svganim id="3_burst" src="lib/animations/burst_animation.json" width="110" height="70" loop="false" autoplay="false" fps="40"/>				
			<text id="3_topicTxt" class="topicButtonText" x="110" y="0" width="240" height="100%" >
				<![CDATA[
					<p class="title"><span class="wf-topic-longlabel"></span></p>
					<p class="topicTime"><span class="wf-topic-duration">5</span> MINS</p>
				]]>
			</text>				
		</topicbutton>
		
		<topicbutton id="4" topic="4" x="2970" y="100" width="100" height="150" event="topicbutton" class="animationTrigger" bufferoffset="100" target="topicButtons">			
			<status id="4_status" y="65"  topic="4" />
			<svganim id="4_burst" src="lib/animations/burst_animation.json" width="110" height="70" loop="false" autoplay="false" fps="40"/>				
			<text id="4_topicTxt" class="topicButtonText" x="110" y="0" width="240" height="100%" >
				<![CDATA[
					<p class="title"><span class="wf-topic-longlabel"></span></p>
					<p class="topicTime"><span class="wf-topic-duration">5</span> MINS</p>
				]]>
			</text>				
		</topicbutton>	

	</custom>

	<box id="menu_overlay" x="0" y="0" width="3440" height="644" bgcol="FFFFFF" />
	
</data>

