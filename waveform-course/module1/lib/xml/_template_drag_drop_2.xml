<?xml version="1.0" encoding="utf-8" ?>
<data>
	<events>
	
		<event id="drag">
			<log>drag</log>
		</event>
		<event id="drop_in">
			<log>drop_in</log>
		</event>
		<event id="drop_out">
			<log>drop_out</log>
		</event>
		<event id="drag1dropped">
			<log>drag 1 dropped in target</log>
		</event>
	
	
		<event id="drop_in_1">
			<log>drop_in 1</log>
		</event>
		<event id="drop_in_2">
			<log>drop_in 2</log>
		</event>
		<event id="drop_in_3">
			<log>drop_in 3</log>
		</event>
		<event id="drop_in_4">
